@bot.callback_query_handler(func=lambda call: call.data == 'send_number')
def handle_send_number(callback_query):
    chat_id = callback_query.message.chat.id
    bot.send_message(chat_id, 'ğŸ“± Ø§Ù„Ø±Ø¬Ø§Ø¡ Ø¥Ø±Ø³Ø§Ù„ Ø±Ù‚Ù… Ù‡Ø§ØªÙÙƒ Djezzy Ø§Ù„Ø°ÙŠ ÙŠØ¨Ø¯Ø£ Ø¨Ø§Ù„Ø±Ù‚Ù… 07:')
    bot.register_next_step_handler_by_chat_id(chat_id, handle_phone_number)

def handle_phone_number(msg):
    chat_id = msg.chat.id
    text = msg.text
    if text.startswith('07') and len(text) == 10:
        msisdn = '213' + text[1:]
        if send_otp(msisdn):
            bot.send_message(chat_id, 'ğŸ”¢ ØªÙ… Ø¥Ø±Ø³Ø§Ù„ Ø±Ù…Ø² OTP. Ø§Ù„Ø±Ø¬Ø§Ø¡ Ø¥Ø¯Ø®Ø§Ù„ Ø§Ù„Ø±Ù…Ø² Ø§Ù„Ø°ÙŠ ØªÙ„Ù‚ÙŠØªÙ‡:')
            bot.register_next_step_handler_by_chat_id(chat_id, lambda msg: handle_otp(msg, msisdn))
        else:
            bot.send_message(chat_id, 'âš ï¸ Ø­Ø¯Ø« Ø®Ø·Ø£ Ø¹Ù†Ø¯ Ø¥Ø±Ø³Ø§Ù„ Ø±Ù…Ø² OTP. Ø§Ù„Ø±Ø¬Ø§Ø¡ Ø§Ù„Ù…Ø­Ø§ÙˆÙ„Ø© Ù…Ø±Ø© Ø£Ø®Ø±Ù‰.')
